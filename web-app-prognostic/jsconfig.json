
{
    "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "components/*": ["components/*"],
      "assets/*": ["assets/*"],
      "utils/*": ["utils/*"],
      "services/*": ["services/*"],
      "pages/*": ["pages/*"],
      "layouts/*": ["layouts/*"],
      "hooks/*": ["hooks/*"]
    },
    "jsx": "react",
    "allowImportingTsExtensions": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}